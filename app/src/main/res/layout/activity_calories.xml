<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calories_Activity">

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="175dp"

        android:layout_marginEnd="147dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="13sp" />

    <Button
        android:id="@+id/maintButton"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="21dp"
        android:background="#02C39A"
        android:text="Calculate"
        android:textSize="12sp" />

    <Button
        android:id="@+id/bulkButton"
        android:layout_width="106dp"
        android:layout_height="32dp"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="22dp"
        android:background="#02C39A"
        android:text="Calculate"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="88dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="69dp"
        android:text="Gain Weight" />

    <Button
        android:id="@+id/cutButton"
        android:layout_width="101dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:background="#02C39A"
        android:text="Calculate"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageInput"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="75dp"

        android:layout_marginTop="7dp"
        android:layout_marginEnd="145dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="180dp"
        android:text="Weight:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/displayValue"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="126dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="226dp"
        android:textSize="12pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="250dp"
        android:text="Maintain Weight" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="250dp"
        android:text="Cut Weight" />

    <EditText
        android:id="@+id/ageInput"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="90dp"

        android:layout_marginEnd="146dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/textHeight"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
        android:text="Height:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textAge"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="93dp"
        android:text="Age:"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="67dp"
        android:layout_height="71dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="171dp"
        android:layout_marginEnd="173dp"
        android:layout_marginBottom="577dp"
        android:src="@drawable/caloriescalculator" />

</RelativeLayout>